{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "outDir": "./dist",
      "strict": true,
      "lib": ["es6", "es2017"],
      "moduleResolution": "node",
      "paths": {
        "@core/*": ["../../core/*"],
        "@config/*": ["./src/config/*"],
        "@models/*": ["./src/models/*"],
        "@controllers/*": ["./src/controllers/*"]
      },
      "baseUrl": "./",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true
    }
  }
