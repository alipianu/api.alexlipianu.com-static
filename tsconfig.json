{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "outDir": "./dist",
      "strict": true,
      "lib": ["es6", "es2017"],
      "moduleResolution": "node",
      "baseUrl": "./",
      "paths": {
        "*": [
          "node_modules/*",
          "src/types/*"
        ]
      },
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true
    }
  }